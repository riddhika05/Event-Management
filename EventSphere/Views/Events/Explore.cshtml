
@model List<Event>

<h2 class="text-center my-5 display-5 fw-bold text-primary">Explore Events</h2>

@if (Model.Any())
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var evt in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <img src="@evt.ImageUrl" class="card-img-top img-fluid rounded-top" alt="@evt.Name" style="height: 250px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@evt.Name</h5>
                            <p class="card-text mb-1"><i class="bi bi-calendar-event"></i> <strong>Date:</strong> @evt.Date.ToString("f")</p>
                            <p class="card-text mb-1"><i class="bi bi-geo-alt"></i> <strong>Location:</strong> @evt.Location</p>
                            <p class="card-text mb-1"><i class="bi bi-person-fill"></i> <strong>Organizer:</strong> @evt.Organizer_Name</p>
                            <p class="card-text mb-3"><i class="bi bi-people-fill"></i> <strong>Attendees:</strong> @evt.AttendeeCount</p>

                            <div class="mt-auto d-flex justify-content-between">
                                <a href="/Events/Register?eventId=@evt.Id" class="btn btn-outline-primary">Register</a>
                                <a href="/Events/Describe?eventId=@evt.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning text-center mt-4">
        <strong>No events found.</strong> Please check back later!
    </div>
}

