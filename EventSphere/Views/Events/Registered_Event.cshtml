@model List<Event>

<h2 class="text-center my-5 display-5 fw-bold text-primary">My Registered Events</h2>

@if (Model.Any())
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var ev in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <img src="@ev.ImageUrl" class="card-img-top img-fluid rounded-top" alt="@ev.Name" style="height: 250px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark">@ev.Name</h5>
                            <p class="card-text mb-1"><i class="bi bi-calendar-event"></i> <strong>Date:</strong> @ev.Date.ToString("f")</p>
                            <p class="card-text mb-1"><i class="bi bi-geo-alt"></i> <strong>Location:</strong> @ev.Location</p>
                            <p class="card-text mb-3"><i class="bi bi-person-fill"></i> <strong>Organizer:</strong> @ev.Organizer_Name</p>

                            <div class="mt-auto">
                                <a href="/Events/Describe?eventId=@ev.Id" class="btn btn-outline-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center mt-4">
        <strong>You haven’t registered for any events yet.</strong>
    </div>
}
