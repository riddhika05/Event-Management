@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to EventSphere</h1>
    <p class="lead">Attend. Host. Discover amazing events near you.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-auto">
            <a asp-controller="Events" asp-action="Explore" class="btn btn-primary px-4">Explore Events</a>
        </div>
        <div class="col-auto">
            <a asp-controller="Events" asp-action="Host" class="btn btn-success px-4">Host an Event</a>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div id="eventCarousel" class="carousel slide w-100 w-md-75" data-bs-ride="carousel">
            <!-- Indicators -->
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#eventCarousel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#eventCarousel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#eventCarousel" data-bs-slide-to="2"></button>
               
            </div>

            <!-- Slides -->
            <div class="carousel-inner rounded-3 vh-50">
                <div class="carousel-item active">
                    <img src="@Url.Content("~/images/Slider1.jpg")" class="d-block w-100 img-fluid" style="object-fit: cover;">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/images/Slider2.jpg")" class="d-block w-100 img-fluid" style="object-fit: cover;">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/images/Slider3.jpg")" class="d-block w-100 img-fluid" style="object-fit: cover;">
                </div>
               
            </div>

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>
